<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.arunya.aarunya.RegisterAsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="#2979FF"
        android:gravity="center"
        android:text="@string/register_as"
        android:textColor="#FFEBEE"
        android:textSize="20sp" />

    <Button
        android:id="@+id/register_as_producer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="24dp"
        android:text="@string/producer" />

    <Button
        android:id="@+id/register_as_buyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="24dp"
        android:text="@string/buyer" />

    <Button
        android:id="@+id/register_as_transporter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="24dp"
        android:text="@string/transporter" />

</LinearLayout>
